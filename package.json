{
  "name": "web-site",
  "version": "0.0.0",
  "description": "Webcomponent web-site following open-wc recommendations",
  "author": "web-site",
  "license": "MIT",
  "scripts": {
    "lint": "eslint --ext .ts,.html . --ignore-path .gitignore && prettier \"**/*.ts\" --check --ignore-path .gitignore",
    "format": "eslint --ext .ts,.html . --fix --ignore-path .gitignore && prettier \"**/*.ts\" --write --ignore-path .gitignore",
    "integrity": "sed -i '' \"s/SRI_HERE/sha256-$(curl -s https://d33wubrfki0l68.cloudfront.net/js/b975b638f97f92d909035e51d87cb1835486aa10/web-site.js | openssl dgst -sha256 -binary | openssl base64 -A)/g\" dist/index.html",
    "build": "rimraf dist && tsc && rollup -c rollup.config.js && npm run analyze -- --exclude dist",
    "start:build": "web-dev-server --root-dir dist --app-index index.html --open",
    "analyze": "cem analyze --litelement",
    "start": "tsc && concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"wds\""
  },
  "dependencies": {
    "@openpgp/web-stream-tools": "^0.0.10",
    "@rollup/plugin-alias": "^3.1.9",
    "@rollup/plugin-html": "^0.2.4",
    "@rollup/plugin-replace": "^4.0.0",
    "lit": "^2.2.2",
    "openpgp": "^5.2.1",
    "three": "^0.140.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.16.11",
    "@custom-elements-manifest/analyzer": "^0.5.7",
    "@open-wc/building-rollup": "^2.0.1",
    "@open-wc/eslint-config": "^7.0.0",
    "@rollup/plugin-babel": "^5.3.1",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-typescript": "^8.3.2",
    "@types/three": "^0.140.0",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "@typescript-eslint/parser": "^5.21.0",
    "@web/dev-server": "^0.1.31",
    "@web/rollup-plugin-copy": "^0.3.0",
    "@web/rollup-plugin-html": "^1.10.3",
    "@web/rollup-plugin-import-meta-assets": "^1.0.7",
    "@yushijinhun/three-minifier-rollup": "^0.3.1",
    "babel-plugin-template-html-minifier": "^4.1.0",
    "concurrently": "^7.1.0",
    "deepmerge": "^4.2.2",
    "eslint": "^8.14.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^8.0.0",
    "lint-staged": "^12.4.1",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.72.1",
    "rollup-plugin-minify-html-literals": "^1.2.6",
    "rollup-plugin-summary": "^1.4.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-workbox": "^6.2.0",
    "tslib": "^2.4.0",
    "typescript": "^4.6.3"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "@open-wc",
      "prettier"
    ],
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": [
        "error"
      ],
      "import/no-unresolved": "off",
      "import/extensions": [
        "error",
        "always",
        {
          "ignorePackages": true
        }
      ]
    }
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "customElements": "custom-elements.json"
}
